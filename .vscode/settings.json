{
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      {
        "language": "typescript",
        "autoFix": true
      },
      {
        "language": "typescriptreact",
        "autoFix": true
      }
    ],
    "eslint.options": {
      "extensions": [
        ".js",
        ".ts",
        ".jsx",
        ".tsx"
      ]
    },
    "eslint.enable": true,
    "tslint.enable": false,
    "eslint.packageManager": "yarn",
    "eslint.autoFixOnSave": true,
    "typescript.tsdk": "node_modules/typescript/lib",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  }
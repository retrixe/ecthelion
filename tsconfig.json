{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "target": "es2016",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "lib/",
    "pretty": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    // Next.js starts here.
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "pages/**/*",
    "imports/**/*",
    "index.d.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
